<Window x:Class="Construct.UX.Views.Visualizations.SaveVisualizationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Title="Save Visualization" WindowStyle="ToolWindow" Height="400" Width="600">
	<Grid>
		<Button Content="Save" Margin="0,0,90.333,9.333" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="SaveButton_Click" />
		<Button Content="Cancel" Margin="0,0,10.333,9.333" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="CancelButton_Click" />
		<ComboBox x:Name="VisNameBox" Margin="10,10,10.333,0" VerticalAlignment="Top" DisplayMemberPath="Name" IsEditable="True" />
		<TextBox x:Name="VisDescriptionBox" Margin="10,37,10.333,37.333" TextWrapping="Wrap"/>
	</Grid>
</Window>
